<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Discord Farbpalette -->
    <Color x:Key="DiscordBackground">#36393F</Color>
    <Color x:Key="DiscordBackgroundDarker">#2F3136</Color>
    <Color x:Key="DiscordBackgroundLighter">#40444B</Color>
    <Color x:Key="DiscordBlurple">#5865F2</Color>
    <Color x:Key="DiscordGreen">#57F287</Color>
    <Color x:Key="DiscordYellow">#FEE75C</Color>
    <Color x:Key="DiscordRed">#ED4245</Color>
    <Color x:Key="DiscordTextDarker">#72767D</Color>
    <Color x:Key="DiscordText">#DCDDDE</Color>
    <Color x:Key="DiscordTextBrighter">#FFFFFF</Color>

    <!-- System definierte Farben -->
    <Color x:Key="Primary">#5865F2</Color>
    <Color x:Key="Secondary">#40444B</Color>
    <Color x:Key="Tertiary">#2F3136</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Seiten Hintergrundfarben -->
    <SolidColorBrush x:Key="PageBackgroundColor">#36393F</SolidColorBrush>
    <SolidColorBrush x:Key="NavigationBarColor">#202225</SolidColorBrush>

    <!-- Rahmenfarben -->
    <Color x:Key="BorderColor">#72767D</Color>
    <Color x:Key="BorderColorDarker">#40444B</Color>

</ResourceDictionary>